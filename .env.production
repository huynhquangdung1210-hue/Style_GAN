# Environment configuration for production
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# Server settings
HOST=0.0.0.0
PORT=8080
WORKERS=4

# Database settings
REDIS_URL=redis://redis-service:6379
REDIS_MAX_CONNECTIONS=20

# Storage settings (MinIO default)
STORAGE_TYPE=minio
MINIO_ENDPOINT=minio-service:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=style-transfer
MINIO_SECURE=false

# AWS S3 settings (optional - set these to use S3 instead)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_BUCKET=

# Local storage fallback
LOCAL_STORAGE_PATH=./storage

# Model settings
CLIP_MODEL_NAME=openai/clip-vit-large-patch14
DIFFUSION_MODEL_NAME=stabilityai/stable-diffusion-xl-base-1.0
USE_FP16=true
MAX_BATCH_SIZE=4
DEVICE_TYPE=cuda
WARMUP_ON_STARTUP=true
CACHE_STYLE_EMBEDDINGS=true

# Security settings (CHANGE THESE!)
JWT_SECRET_KEY=your-very-secure-secret-key-change-this
RATE_LIMIT_PER_MINUTE=30
CORS_ORIGINS=https://yourdomain.com

# Processing settings
MAX_FILE_SIZE_MB=50
ENABLE_NSFW_DETECTION=true
NSFW_THRESHOLD=0.7

# Monitoring settings
ENABLE_METRICS=true
PROMETHEUS_PORT=9090
ENABLE_TRACING=true
SENTRY_DSN=your_sentry_dsn_here