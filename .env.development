# Environment configuration for development
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG

# Server settings
HOST=0.0.0.0
PORT=8080
WORKERS=1

# Database settings
REDIS_URL=redis://localhost:6379
REDIS_MAX_CONNECTIONS=10

# Storage settings (MinIO default for development)
STORAGE_TYPE=minio
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=style-transfer
MINIO_SECURE=false

# AWS S3 settings (optional - set these to use S3 instead)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_BUCKET=

# Local storage fallback
LOCAL_STORAGE_PATH=./storage

# Model settings
CLIP_MODEL_NAME=openai/clip-vit-large-patch14
DIFFUSION_MODEL_NAME=stabilityai/stable-diffusion-xl-base-1.0
USE_FP16=true
MAX_BATCH_SIZE=2
DEVICE_TYPE=cuda
WARMUP_ON_STARTUP=false
CACHE_STYLE_EMBEDDINGS=false

# Security settings
JWT_SECRET_KEY=dev-secret-key-not-for-production
RATE_LIMIT_PER_MINUTE=300
CORS_ORIGINS=*

# Processing settings
MAX_FILE_SIZE_MB=50
ENABLE_NSFW_DETECTION=false
NSFW_THRESHOLD=0.7

# Monitoring settings
ENABLE_METRICS=false
PROMETHEUS_PORT=9090
ENABLE_TRACING=false